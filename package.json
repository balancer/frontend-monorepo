{
  "name": "@balancer/frontend-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "start": "turbo start",
    "dev": "pnpm run dev:bal",
    "dev:bal": "turbo dev --filter frontend-v3",
    "dev:beets": "turbo dev --filter beets-frontend-v3",
    "graphql:gen": "turbo graphql:gen",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "prettier": "prettier --check '**/*.*(md|json|yaml|ts|js|tsx)' --log-level warn",
    "prettier:fix": "pnpm run prettier --write",
    "stylelint": "stylelint '**/*.css'",
    "stylelint:fix": "pnpm run stylelint -- --fix",
    "test:integration": "turbo test:integration --log-order=stream --",
    "test:unit": "turbo test:unit --log-order=stream --",
    "typecheck": "turbo typecheck",
    "prepare": "husky"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^9.1.2",
    "lint-staged": "^13.2.3",
    "prettier": "^3.2.5",
    "stylelint": "^15.9.0",
    "stylelint-config-standard": "^33.0.0",
    "stylelint-prettier": "^3.0.0",
    "turbo": "^2.1.2",
    "typescript": "^5.4.5"
  },
  "packageManager": "pnpm@9.0.6",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "@types/react": "^18.0.0",
        "react": "^18.0.0",
        "react-dom": "^18.0.0"
      }
    }
  }
}
