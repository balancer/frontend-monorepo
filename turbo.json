{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [
    "NEXT_PUBLIC_BALANCER_API_URL",
    "NEXT_PUBLIC_APP_ENV",
    "NEXT_PUBLIC_ALLOW_SKIP_TRANSACTION",
    "NEXT_PUBLIC_PROJECT_ID"
  ],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "start": {
      "dependsOn": ["^start"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "lint": {
      "dependsOn": ["^transit"],
      "outputs": ["node_modules/.cache/.eslintcache", ".next/cache/eslint"]
    },
    "lint:fix": {
      "dependsOn": ["^transit"],
      "outputs": ["node_modules/.cache/.eslintcache", ".next/cache/eslint"],
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["graphql:gen", "transit"],
      "outputs": ["node_modules/.cache/tsbuildinfo.json"]
    },
    "test:unit": {
      "dependsOn": ["graphql:gen", "^test:unit"]
    },
    "test:integration": {
      "dependsOn": ["graphql:gen", "^test:integration"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "graphql:gen": {
      "dependsOn": ["^graphql:gen"],
      "inputs": [".env*"],
      "outputs": ["shared/services/api/generated/**"]
    },
    "transit": {
      "dependsOn": ["^transit"]
    },
    "//#format": {
      "outputs": ["node_modules/.cache/.prettiercache"]
    },
    "format": {
      "dependsOn": ["^transit"],
      "outputs": ["node_modules/.cache/.prettiercache"]
    },
    "//#format:fix": {
      "outputs": ["node_modules/.cache/.prettiercache"],
      "cache": false
    },
    "format:fix": {
      "dependsOn": ["^transit"],
      "outputs": ["node_modules/.cache/.prettiercache"],
      "cache": false
    }
  }
}
