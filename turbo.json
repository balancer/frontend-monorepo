{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["BALANCER_API_URL", "APP_ENV", "ALLOW_SKIP_TRANSACTION"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "build:dev": {
      "dependsOn": ["^build:dev"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"]
    },
    "typecheck": {
      "dependsOn": ["graphql:gen", "^typecheck"]
    },
    "test:unit": {
      "dependsOn": ["graphql:gen", "^test:unit"]
    },
    "test:integration": {
      "dependsOn": ["graphql:gen", "^test:integration"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "graphql:gen": {
      "dependsOn": ["^graphql:gen"],
      "inputs": [".env*"],
      "outputs": ["shared/services/api/generated/**"]
    }
  }
}
