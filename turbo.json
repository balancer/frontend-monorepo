{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [
    "NEXT_PUBLIC_BALANCER_API_URL",
    "NEXT_PUBLIC_APP_ENV",
    "NEXT_PUBLIC_PROJECT_ID",
    "NEXT_PRIVATE_DRPC_KEY",
    "PRIVATE_HYPERNATIVE_API_ID",
    "PRIVATE_HYPERNATIVE_API_SECRET",
    "NEXT_PUBLIC_WALLET_CONNECT_ID",
    "PRIVATE_CURRENCYAPI_KEY",
    "VITEST_POOL_ID",
    "NODE_ENV",
    "SILENT_TESTS",
    "NEXT_PUBLIC_SENTRY_DSN",
    "NEXT_RUNTIME",
    "NEXT_PRIVATE_ALCHEMY_KEY",
    "CI",
    "NEXT_PUBLIC_UPDATE_API_MOCKS"
  ],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "start": {
      "dependsOn": ["^start"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "transit": {
      "dependsOn": ["^transit"]
    },
    "lint": {
      "dependsOn": ["^transit"],
      "outputs": ["node_modules/.cache/.eslintcache", ".next/cache/eslint"]
    },
    "lint:fix": {
      "dependsOn": ["^transit"],
      "outputs": ["node_modules/.cache/.eslintcache", ".next/cache/eslint"]
    },
    "typecheck": {
      "dependsOn": ["^graphql:gen", "^transit"],
      "inputs": ["shared/services/api/generated/**"],
      "outputs": ["node_modules/.cache/tsbuildinfo.json"]
    },
    "test:unit": {
      "dependsOn": ["^graphql:gen", "^test:unit"]
    },
    "test:integration": {
      "dependsOn": ["^graphql:gen", "^test:integration"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "test:e2e": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "test:e2e:ui": {
      "dependsOn": ["^transit"]
    },
    "graphql:gen": {
      "dependsOn": ["^graphql:gen"],
      "inputs": ["**/*.graphql"],
      "outputs": ["shared/services/api/generated/**"]
    },
    "prettier": {
      "dependsOn": ["^prettier"],
      "outputs": [".prettiercache"]
    },
    "prettier:fix": {
      "dependsOn": ["^prettier:fix"],
      "outputs": [".prettiercache"],
      "cache": false
    },
    "stylelint": {
      "dependsOn": ["^stylelint"]
    },
    "stylelint:fix": {
      "dependsOn": ["^stylelint:fix"],
      "cache": false
    }
  },
  "remoteCache": {
    "enabled": true
  }
}
