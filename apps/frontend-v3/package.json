{
  "name": "frontend-v3",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "next start",
    "build": "pnpm --filter @repo/lib graphql:gen && next build",
    "build:no-lint": "pnpm --filter @repo/lib graphql:gen && next build --no-lint",
    "build:turbo": "pnpm --filter @repo/lib graphql:gen && next build --turbo",
    "dev": "concurrently \"pnpm --filter @repo/lib graphql:gen --watch\" \"next dev --turbopack\"",
    "dev:webpack": "concurrently \"pnpm --filter @repo/lib graphql:gen --watch\" \"next dev\"",
    "dev:no-gen": "next dev --turbo",
    "gen:wagmi": "pnpm wagmi generate",
    "lint": "eslint . --max-warnings 0 --cache",
    "lint:fix": "eslint . --fix --max-warnings 0 --cache",
    "prettier": "prettier '**/*.*(md|json|yaml|ts|js|tsx)' --check --cache --log-level warn",
    "prettier:fix": "prettier '**/*.*(md|json|yaml|ts|js|tsx)' --write --cache --log-level=warn",
    "stylelint": "stylelint '**/*.css'",
    "stylelint:fix": "stylelint '**/*.css' --fix",
    "typecheck": "tsc --project tsconfig.json --noEmit --incremental",
    "gen:theme-typings": "chakra-cli tokens ./lib/services/chakra/themes/bal/bal.theme.ts",
    "postinstall": "pnpm run gen:theme-typings",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:integration": "vitest run -c ./vitest.config.integration.ts",
    "test:integration:watch": "vitest -c ./vitest.config.integration.ts"
  },
  "dependencies": {
    "@apollo/client": "^3.13.1",
    "@balancer/sdk": "4.0.3",
    "@chakra-ui/clickable": "^2.1.0",
    "@chakra-ui/hooks": "2.4.2",
    "@chakra-ui/icons": "2.2.4",
    "@chakra-ui/react": "2.10.6",
    "@chakra-ui/theme-tools": "2.2.6",
    "@layerzerolabs/scan-client": "^0.0.8",
    "@nikolovlazar/chakra-ui-prose": "^1.2.1",
    "@repo/lib": "workspace:*",
    "@repo/test": "workspace:*",
    "@sentry/nextjs": "8.50.0",
    "@tanstack/react-query": "5.67.0",
    "@vercel/speed-insights": "1.1.0",
    "bignumber.js": "9.2.0",
    "date-fns": "^2.30.0",
    "echarts": "5.6.0",
    "echarts-for-react": "3.0.2",
    "framer-motion": "12.9.7",
    "lodash": "^4.17.21",
    "next": "15.3.2",
    "next-themes": "0.4.6",
    "nextjs-toploader": "3.8.16",
    "prismjs": "1.30.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-error-boundary": "5.0.0",
    "react-feather": "^2.0.10",
    "react-use-measure": "^2.1.1",
    "tinycolor2": "^1.6.0",
    "usehooks-ts": "3.1.1",
    "viem": "2.30.0"
  },
  "devDependencies": {
    "@chakra-ui/cli": "2.5.8",
    "@chakra-ui/styled-system": "2.12.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@testing-library/react": "16.3.0",
    "@types/js-cookie": "^3.0.6",
    "@types/lodash": "^4.14.195",
    "@types/node": "22.15.19",
    "@types/prismjs": "^1.26.5",
    "@types/react": "19.1.3",
    "@types/react-dom": "19.1.3",
    "@types/tinycolor2": "^1.4.6",
    "@viem/anvil": "^0.0.10",
    "@wagmi/cli": "2.2.0",
    "autoprefixer": "10.4.21",
    "concurrently": "9.1.2",
    "cross-fetch": "4.1.0",
    "eslint": "9.27.0",
    "lokijs": "^1.5.12"
  },
  "engines": {
    "node": ">=20.x"
  },
  "engineStrict": true
}
